% Package pour les notes de pr√©sentation
\ProvidesPackage{notes}

% Configuration pour afficher les notes
\setbeameroption{show notes}

% Style des notes
\setbeamertemplate{note page}[plain]
\setbeamercolor{note page}{bg=white}
\setbeamercolor{note title}{parent=normal text}
\setbeamercolor{note date}{parent=note title}

% Format des notes
\defbeamertemplate{note page}{custom}
{%
  {%
    \scriptsize
    \usebeamerfont{note title}\usebeamercolor[fg]{note title}%
    \ifbeamercolorempty[bg]{note page}{}{\nointerlineskip\vskip-\baselineskip\hbox to\textwidth{\hfill\vbox to0.25pt{\vfill\color{bg}\hrule width\textwidth height0.25pt\vfill}}\vskip0.25\baselineskip}
    \vskip0.5em
  }%
  \vfill
  \insertnote
}

\setbeamertemplate{note page}[custom]